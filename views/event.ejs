<%- include ('_layouts/websitehead'); %>
</style>
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/fellowship.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end">
      <div class="col-md-9 ftco-animate pb-5">
       <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home <i class="fa fa-chevron-right"></i></a></span> <span>About us<i class="fa fa-chevron-right"></i></span></p>
       <h1 class="mb-0 bread">Upcoming Events</h1>
     </div>
   </div>
 </div>
</section>

    <section class="ftco-section">
      <div class="container">
          
             <% events.forEach(event => { %>
              <div class="row ministry ftco-animate mb-3" style="margin: auto; width: 70pc">
              <div class="col-md-4 col-lg-4 img" style="height: 25rem; background-image: url(<%= event.eventImagePath; %>);"></div>
                  <div class="col-md-8 col-lg-8 text px-5">
                  <h2 class="mt-5 mb-2" style="color: #ce0f3d"><%= event.eventname; %></h2>
                  <div class="meta mb-0">
                    <p>
                    Date: <span style="color: #ce0f3d"> <%= event.eventdate.toDateString(); %></span><br> Starting at: <span style="color: #ce0f3d"><%= event.starttime; %></span>
                  </p>
                </div class="mt-0">
                <p><%= event.description; %></p>
                <p class="btn-customize">
                 
              For more details or reservations:
                 <a href="/contact" class="btn btn-primary btn-outline-primary px-4 py-3 ml-lg-2 mb-1"><span class="fa fa-envelope"></span>Contact us</a>
                </p>
              </div>
            </div>
          </div>

            <% }) %>
            
            
              
          </div>
      </div>
  </section>

<%- include ('_layouts/websitefoot'); %>