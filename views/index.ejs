<% if (sermons.length !== 0) { %> 
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center pb-5 mb-3">
				<div class="col-md-7 heading-section text-center ftco-animate">
					<span class="subheading">Our Sermons</span>
					<h3>Latest Sermon</h3>
				</div>
			</div>
			<% sermons.forEach(sermon => { %>
			<div class="row no-gutters d-flex sermon-wrap ftco-animate bg-light">
              <div class="img col-md-4 col-lg-4 ml-0 " style="background-image: url(<%= sermon.coverImagePath; %>);"></div>
            <div class="col-md-8 col-lg-8 text px-5">
            <div class="card mt-2">
            <!-- Card content -->
            <div class="card-body text-center">
            <div class="">
                    <audio id="music" preload="true" class="mt-2">
                    <source src="<%= sermon.audioPath; %>">  
                    Sorry, your browser doesn't support embedded videos.
                    </audio>
                  <div  id="audioplayer" >
                  <i id="pButton" class="fa fa-play"></i>
                  <div id="timeline">
                      <div id="playhead"></div>
                  </div>
                  </div>
                  </div>
                  </div>
                  </div>
                  <h2 class="mt-2 mb-2"><%= sermon.title; %></h2>
                  <div class="meta mb-0">
                    <p >
                    <span class="d-inline" style="color: #ce0f3d">Speaker: </span> <%= sermon.speaker; %><br>
                    <!--<span>Bible passage: <a href="#">{{$sermon->passage}}</a></span><br>-->
                    <span class="d-inline" style="color: #ce0f3d">Delivered: </span> <%= sermon.eventname; %> <span style="text-decoration: underline;"><%= sermon.eventdate.toLocaleDateString(); %></span>
                  </p>
                </div class="mt-0">
                <p style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;"><%= sermon.description; %></p>
                <p class="btn-customize">
                
                  <a href="/sermons" class="btn btn-primary px-4 py-3 mr-md-2"><span class="fa fa-play"></span> All Sermons</a>
                 <a href="<%= sermon.audioPath; %>" class="btn btn-primary btn-outline-primary px-4 py-3 ml-lg-2 mb-1" download><span class="fa fa-download"></span> download sermon</a>
                </p>
              </div>
            </div>
          </div>

            <% }); %>
				</div>
			</div>

		</div>
	</section>
	<% } %>

