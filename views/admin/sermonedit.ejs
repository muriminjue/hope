 <%- include ('adminlook'); %>
  <div class="container">
    <h1 class="mb-4">Sermons</h1>
    <a href="/admin/sermonadd" class="btn btn-success">New Sermon</a>

    <% sermons.forEach(sermon => { %>
      <div class="card mt-4">

        <div class="row card-body">
        <div class="">
        <img height="250" width="250" src="<%= sermon.coverImagePath; %>"></div>
        
        <div class="ml-5 d-inline">
        <audio controls >
        <source src="<%= sermon.audioPath; %>">
        Your browser does not support the audio element.
        </audio>
            <h3 class="card-title mt-1"><b><%= sermon.title; %></b></h3>
            <h5  class="card-subtitle">By <b><%= sermon.speaker %></b></h5>
            <div class="card-subtitle text-muted mb-2">
            <%= sermon.createdAt.toLocaleDateString(); %>
            </div>
          <div class="card-text mb-2">Delivered: <strong> <%= sermon.eventname; %> </strong><span style="color: red"><%= sermon.eventdate.toLocaleDateString(); %></span>
          </div>
          <div class="card-text mb-2"><%= sermon.description; %></div>
          <form action="/admin/sermon/<%= sermon.id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">DELETE</button></form>
          </form>
        </div>
      </div>
      </div>
    <% }) %>
  </div>