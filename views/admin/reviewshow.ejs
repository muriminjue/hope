  <%- include ('adminlook'); %>
  <div class="container">
    <h1 class="mb-1"><%= book.title; %></h1>
    <h3>Author: <b><%- book.author; %></b> published by: <b><%- book.publisher; %></b> </h3>
    <div class="text-muted mb-2">
      <%= book.createdAt.toLocaleDateString(); %>
    </div>
    <div class="mt-1">
    <p><%- book.description; %></p>
  </div>
   <div class="mt-1">
    <h3>Review writen by <b><%- book.writer; %></b></h3>
  </div>

    <a href="/admin/reviewedit" class="btn btn-secondary">All Book Reviews</a>
    <a href="/admin/revieweditor/<%= book.id; %>" class="btn btn-info">Edit</a>


    <div class="mt-2">
          <img height="350" width="200" src="<%= book.coverImagePath; %>">
         
    </div>

    <div class="mt-1">
    <%- book.sanitizedHtml %>
    </div>