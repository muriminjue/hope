  <%- include ('adminlook'); %>
  <div class="container">
    <h1 class="mb-4">Writers</h1>
    <a href="/admin/authoradd" class="btn btn-success">New Writer</a>

    <% authors.forEach(author => { %>
      <div class="card mt-4">
        <div class="card-body">
        <img height="50" width="50" src="<%= author.coverImagePath; %>" alt="Avatar" class="mb-2" style="vertical-align: middle; width: 50px; height: 50px;  border-radius: 50%;">
          <h4 class="card-title d-inline "><%= author.name; %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= author.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= author.description; %></div>
          <a href="/admin/authoreditor/<%= author.id; %>" class="btn btn-info">Edit</a>
          <form action="/admin/author/<%= author.id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">DELETE</button></form>
          </form>
        </div>
      </div>
    <% }) %>
  </div>