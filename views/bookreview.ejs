<%- include ('_layouts/websitehead'); %>
<meta property="title" content="BOOK REVIEWS">
<meta property="image" content="/images/review.jpeg">
<meta property="description" content="">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


<style type="text/css">
	.card {
    font-size: 1em;
    overflow: hidden;
    padding: 0;
    border: none;
  	height: 35rem;
    border-radius: .28571429rem;
    box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5;
}

.card-block {
    font-size: 1em;
    position: relative;
    margin: 0;
    padding: 1em;
    border: none;
    border-top: 1px solid rgba(34, 36, 38, .1);
    box-shadow: none;
}

.card-img-top {
    display: block;
    width: 100%;
    height: 17.5rem;
}

.card-title {
    font-size: 1.28571429em;
    font-weight: 700;
    line-height: 1.2857em;
}

.card-text {
    clear: both;
    margin-top: .5em;
    color: rgba(0, 0, 0, .68);
}

.card-footer {
    font-size: 1em;
    position: static;
    top: 0;
    left: 0;
    max-width: 100%;
    padding: .75em 1em;
    color: rgba(0, 0, 0, .4);
    border-top: 1px solid rgba(0, 0, 0, .05) !important;
    background: #fff;
}

.card-inverse .btn {
    border: 1px solid rgba(0, 0, 0, .05);
}

.profile {
    
    top: 0px;
    display: inline-block;
    overflow: hidden;
    box-sizing: border-box;
    width: 25px;
    height: 25px;
    margin: 0;
    border: 1px solid #fff;
    border-radius: 50%;
}

.profile-avatar {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}



.text-bold {
    font-weight: 700;
}

.meta {
    font-size: 1em;
    color: rgba(0, 0, 0, .4);
}

.meta a {
    text-decoration: none;
    color: rgba(0, 0, 0, .4);
}

.meta a:hover {
    color: rgba(0, 0, 0, .87);
}

.descript {
   overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 3; /* number of lines to show */
   -webkit-box-orient: vertical;
}
</style>


<section class="hero-wrap hero-wrap-2" style="background-image: url('./../images/sermons.jpg')">
    <div class="overlay"></div>
   <div class="container">
        <div class="row no-gutters slider-text align-items-end" >
        <div class="col-md-9 ftco-animate pb-5">
         <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/">Home <i class="fa fa-chevron-right"></i></a></span> <span>Resources <i class="fa fa-chevron-right"></i></span></p>
         <h1 class="mb-0 bread">Book Review</h1>
       </div>
     </div>
      </div>
  </section>

<section>

            <div class="container py-4">
                     <div class="row">
                        <% books.forEach(book => { %> 

                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 p-1 mr-2 ml-1" style="  border: 1px solid; box-shadow: 5px 10px  #c5c5c5;" >
                     
                     <div class="mb-4 mb-lg-0">
                      
                    <!-- post classic block -->
                     <div class="mb-4">
                     <a href="/book/<%= book.slug; %>">
                        <div class="img-zoom">
                        <img style="" src="<%= book.coverImagePath; %>" alt="" class="card-img-top img-fluid rounded">
                                </div></a></div><div>
                                <a href="/book/<%= book.slug; %>"><h3 class="mb-3"><%= book.title; %></h3> </a>
                                        <div class="mb-3">
                                        <div class="font-14">
                                     <span class="mr-2"><%= book.createdAt.toDateString(); %></span>

                                     <span>Posted by <% book.writer.forEach(author => { %><a><%= author.name; %> </a></span><% }); %>

                                     <br>
                                    
                                    <div class="m-1"><p style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical;"> <%= book.description; %> </p></div>
                                    </div> <a href="/book/<%= book.slug; %>" class="underline">Read more</a> </div> </div>
                                    <!-- post classic block -->
                                     
                                    </div>
                                    
                                   </div>
                                   <% }) %>
                                    </div></div>

    </section>
<div class="col-lg-12">
               <ul class="page-numbers">
                           
                <% if (currentPage == 1 && pages > 1) { %> 
                <li><a href="/bookreview/<%= parseInt(currentPage) %>"><%=  parseInt(currentPage) %></a></li>
                <% for (let i = 1; i < pages; i += 1) { %>
                  <li><a href="/bookreview/<%= parseInt(currentPage) + i %>"> <%=  parseInt(currentPage) + i %></a> </li>
                <% }; %>

                <li><a href="/bookreview/<%= parseInt(currentPage) + 1 %>"> <i class="fa fa-angle-double-right"></i></a> </li>

            <% } else if (currentPage < pages) { %>
            <li><a href="/bookreview/<%= parseInt(currentPage) - 1 %>"><i class="fa fa-angle-double-left"></i>
            </a></li>
            <% for (let i = 1; i <= pages; i++ ) { %>
                  <li><a href="/bookreview/<%= i %>"> <%=  i; %></a> </li>
            <% }; %>
              <li><a href="/bookreview/<%= parseInt(currentPage) + 1; %>">
              <i class="fa fa-angle-double-right"></i></a></li>

              <% } else if (currentPage == pages && pages > 1) { %>
              <li><a href="/bookreview/<%= parseInt(currentPage) - 1 %>"><span>
              <i class="fa fa-angle-double-left"></i>
               </a>
              <% for (let i = 1; i < pages; i += 1) { %>
                  <li><a href="/bookreview/<%= i; %>"> <%=  i %></a> </li>
            <% }; %>
              <li class="disabled"><a href="/bookreview/<%= parseInt(currentPage); %>"><%=  parseInt(currentPage) %></a></li>              
              <% } %>
              </ul>
    </div>

<%- include ('_layouts/reviewfoot'); %>

<style >
    ul.page-numbers {
    text-align: center;
}

ul.page-numbers li {
    display: inline-block;
    margin: 0px 5px;
}

ul.page-numbers li a {
    width: 50px;
    height: 50px;
    display: inline-block;
    text-align: center;
    line-height: 50px;
    font-size: 15px;
    color: #7a7a7a;
    border: 1px solid #eee;
    font-weight: 500;
    transition: all 0.3s;
}

ul.page-numbers li.active a {
    background-color: #ce0f3d;
    border-color: #ce0f3d;
    color: #fff;
}

ul.page-numbers li a:hover {
    color: #ce0f3d;
}

</style>
<script>
$(document).ready(function () {
    $(window).on("resize", function (e) {
        checkScreenSize();
    });

    checkScreenSize();

    function checkScreenSize(){
        var newWindowWidth = $(window).width();
        if (newWindowWidth < 768) {
           
          jQuery(function($) {
    $('.golink').click(function() {
        return false;
    }).dblclick(function() {
        window.location = this.href;
        return false;
    });
});

        }
        
    }
});

</script>